<h2 style="text-align:{{section.settings.promotion_type}}">Promotion Name: {{ section.settings.title }}</h2>

{% schema %}
{
  "name": "Promotions Group",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type":"text",
      "id":"title",
      "label": "Title",
      "default": "Promotions"
    },
    {
      "type": "select",
      "id": "promotion_type",
      "label": "Promotion Type",
      "options":[
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label":"Right"
        },
        {
          "value":"center",
          "label":"Center"
        }
      ],
      "default": "left"
    }
  ],
  "blocks":[
    {
      "type": "promotion",
      "name": "Promotion",
      "settings":[
        
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotions Group"
    }
  ]
}
{% endschema %}